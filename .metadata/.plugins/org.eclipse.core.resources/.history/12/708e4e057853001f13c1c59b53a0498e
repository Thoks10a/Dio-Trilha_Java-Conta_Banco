package ContaBanco;
import  java.util.Scanner;

public class ContaTerminal {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int numero = 0;
		String agencia,nomeCliente;
		float saldo = 237.48f;
		
		System.out.println("Por favor,digite o número!\n");
		
		numero = sc.nextInt();
		
		System.out.println("Por favor,digite a sua agência!/n");
		agencia = sc.next();
		System.out.println("Por favor,digite o nome do cliente!/n");
		nomeCliente = sc.next();
		System.out.println("Por favor,digite o saldo!/n");
		saldo = sc.nextFloat();
		
		System.out.printf("Olá %s, obrigado por criar uma conta em nosso banco, sua agência é %d, conta %d e seu saldo %f já está disponível para saque",nomeCliente,agencia,numero,saldo);
		
		
	}

}
